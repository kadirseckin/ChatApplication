<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DigerProfiller">

    <ImageView
        android:id="@+id/digerProfilimageView"
        android:layout_width="255dp"
        android:layout_height="205dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/digerProfilAd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/digerProfilAd"
        android:layout_width="273dp"
        android:layout_height="69dp"
        android:layout_marginBottom="21dp"
        android:text="AD SOYAD"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/digerProfilMail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/digerProfilimageView" />

    <TextView
        android:id="@+id/digerProfilMail"
        android:layout_width="286dp"
        android:layout_height="57dp"
        android:layout_marginBottom="40dp"
        android:text="E-MAİL"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/digerProfilGonder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/digerProfilAd" />

    <Button
        android:id="@+id/digerProfilGonder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="69dp"
        android:onClick="digerMesajGonder"
        android:text="Mesaj gönder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/digerProfilMail" />
</androidx.constraintlayout.widget.ConstraintLayout>
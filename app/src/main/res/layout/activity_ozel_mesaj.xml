<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ozelmesajRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="27dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ozelmesajRecyclerView">

        <EditText
            android:id="@+id/ozelMesajText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Mesajınızı giriniz"
            android:inputType="text">

        </EditText>

        <Button
            android:id="@+id/ozelMesajGönderButon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ozelMesajGonderButon"
            android:text="GÖNDER"></Button>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>